@model QuanLySinhVien.Webs.Models.Identity.RegisterViewModel


@{
    Layout = null;
    ViewBag.Title = "Đăng ký tài khoản";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Đăng ký tài khoản | Quản lý ký túc xá đại học Quảng Nam</title>
    <!-- Favicon-->
    <link rel="icon" href="/Assets/template/favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="/Assets/template/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="/Assets/template/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="/Assets/template/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="/Assets/template/css/style.css" rel="stylesheet">
</head>
<body class="signup-page">
    <div class="signup-box">
        <div class="logo">
            <a href="javascript:void(0);" style="font-size:1.7em;line-height:1.6em">Quản lý ký túc xá sinh viên</a>
            <small>Khoa công nghệ thông tin -ĐH Quảng Nam</small>
        </div>
        <div class="card">
            <div class="body">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class="col-pink"})
                    <div class="msg">Đăng ký tài khoản</div>
                    if (ViewBag.Notifi != null)
                    {
                        <p class="col-cyan">
                            @ViewBag.Notifi
                        </p>
                    }
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">person</i>
                        </span>
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @placeholder = "Họ tên" })
                        </div>
                        @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "col-pink" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-line">
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })

                        </div>
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "col-pink" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                        </div>
                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "col-pink" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận Mật khẩu" })

                        </div>
                        @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "col-pink" })
                    </div>

                    <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">Đăng ký</button>
                    <div class="m-t-25 m-b--5 align-center">
                        <a href="/Account/Login">Bạn đã có tài khoản?</a>
                    </div>
                }

            </div>
        </div>
    </div>
    <!-- Jquery Core Js -->
    <script src="/Assets/template/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="/Assets/template/plugins/bootstrap/js/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="/Assets/template/plugins/node-waves/waves.js"></script>
    <!-- Validation Plugin Js -->
    <script src="/Assets/template/plugins/jquery-validation/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="/Assets/template/js/admin.js"></script>

</body>
</html>