@model QuanLySinhVien.Webs.Models.Identity.ResetPasswordViewModel
@{
    ViewBag.Title = "Khôi phục mật khẩu";
}
@{
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Khôi phục mật khẩu | Quản lý ký túc xá đại học Quảng Nam</title>
    <!-- Favicon-->
    <link rel="icon" href="/Assets/template/favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="/Assets/template/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="/Assets/template/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="/Assets/template/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="/Assets/template/css/style.css" rel="stylesheet">
</head>
<body class="signup-page">
    <div class="signup-box">
        <div class="logo">
            <a href="javascript:void(0);" style="font-size:1.7em;line-height:1.6em">Admin-Quản lý ký túc xá sinh viên</a>
            <small>Khoa công nghệ thông tin -ĐH Quảng Nam</small>
        </div>
        <div class="card">
            <div class="body">
                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "col-pink" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="msg">Khôi phục mật khẩu</div>
                    if (ViewBag.ResetMessage != null)
                    {
                        <p class="col-cyan text-center" >
                            @ViewBag.ResetMessage
                        </p>

                        <br />
                        <hr />
                        <a href="/Account/Login" style="margin-left:113px" class="text-center btn btn-success waves-effect">Đăng nhập</a>
                    }
                    else
                    {
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">email</i>
                            </span>
                            <div class="form-line">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @autofocus = "autofocus", @required = "true" })
                            </div>
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "col-pink" })
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">lock</i>
                            </span>
                            <div class="form-line">
                                @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Mật khẩu", @required = "true" })
                            </div>
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "col-pink" })
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="material-icons">lock</i>
                            </span>
                            <div class="form-line">
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "Xác nhận Mật khẩu", @required = "true" })

                            </div>
                            @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "col-pink" })
                        </div>

                        <button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">Khôi phục mật khẩu</button>

                    }

                }

            </div>
        </div>
    </div>
    <!-- Jquery Core Js -->
    <script src="/Assets/template/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="/Assets/template/plugins/bootstrap/js/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="/Assets/template/plugins/node-waves/waves.js"></script>
    <!-- Validation Plugin Js -->
    <script src="/Assets/template/plugins/jquery-validation/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="/Assets/template/js/admin.js"></script>
    <script src="/Assets/template/js/pages/examples/sign-up.js"></script>
</body>
</html>