@using QuanLySinhVien.Webs.Models.Identity
@model LoginViewModel

@{
    Layout = null;
    ViewBag.Title = "Đăng nhập";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Đăng nhập - Hệ thống quản lý ký túc xá sinh viên trường đại học Quảng Nam</title>
    <!-- Favicon-->
    <link rel="icon" href="/Assets/template/favicon.ico" type="image/x-icon">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <!-- Bootstrap Core Css -->
    <link href="/Assets/template/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">
    <!-- Waves Effect Css -->
    <link href="/Assets/template/plugins/node-waves/waves.css" rel="stylesheet" />
    <!-- Animation Css -->
    <link href="/Assets/template/plugins/animate-css/animate.css" rel="stylesheet" />
    <!-- Custom Css -->
    <link href="/Assets/template/css/style.css" rel="stylesheet">
</head>
<body class="login-page">
    <div class="login-box">
        <div class="logo">
            <a href="javascript:void(0);" style="font-size:1.7em;line-height:1.6em">Quản lý ký túc xá sinh viên</a>
            <small>Khoa công nghệ thông tin -ĐH Quảng Nam</small>
        </div>
        <div class="card">
            <div class="body">
                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @id = "sign_in" }))
                {
                    <div class="msg">Đăng nhập để bắt đầu phiên làm việc</div>
                    @Html.AntiForgeryToken()
                    @Html.ValidationMessage("CustomError", new { @class = "col-pink" })
                    @Html.ValidationSummary(true, "", new { @class = "col-pink" })
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">person</i>
                        </span>
                        <div class="form-line">
                            @Html.TextBoxFor(m => m.Email, new { @type = "email", @class = "form-control", @autofocus = "autofocus", @placeholder = "Nhập email..." })
                            <div class="clearfix"></div>

                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "col-pink" })
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">lock</i>
                        </span>
                        <div class="form-line">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                            <div class="clearfix"></div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "col-pink" })
                    </div>
                    <div class="row">
                        <div class="col-xs-8 p-t-5">
                            <input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
                            <label for="rememberme">Nhớ đăng nhập</label>
                        </div>
                        <div class="col-xs-4">
                            <button class="btn btn-block bg-pink waves-effect" type="submit">Đăng nhập</button>
                        </div>
                    </div>
                    <div class="row m-t-15 m-b--20">
                        <div class="col-xs-6">
                            <a href="/Account/Register">Đăng ký tài khoản!</a>
                        </div>
                        <div class="col-xs-6 align-right">
                            <a href="/Account/ForgotPassword">Quên mật khẩu?</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Jquery Core Js -->
    <script src="/Assets/template/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap Core Js -->
    <script src="/Assets/template/plugins/bootstrap/js/bootstrap.js"></script>
    <!-- Waves Effect Plugin Js -->
    <script src="/Assets/template/plugins/node-waves/waves.js"></script>
    <!-- Validation Plugin Js -->
    <script src="/Assets/template/plugins/jquery-validation/jquery.validate.js"></script>
    <!-- Custom Js -->
    <script src="/Assets/template/js/admin.js"></script>
</body>
</html>