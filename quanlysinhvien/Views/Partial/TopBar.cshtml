@{

    var user = (QuanLySinhVien.Webs.Models.Identity.ApplicationUser)Session[QuanLySinhVien.Common.CommonConstants.USER_SESSION];
}
@if (!ViewBag.StudentRole)
{
    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
